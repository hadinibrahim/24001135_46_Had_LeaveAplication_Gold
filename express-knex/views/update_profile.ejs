<%- include('header', {id_prof: prof.id_prof }) %>

    <!-- <h1>Update Profile</h1> -->
    <% if (error) { %>
        <p style="color:red;">
            <%= error %>
        </p>
        <% } %>
            <% if (prof) { %>
                <form action="/profile/edit/<%= prof.id_prof %>" method="POST">
                    <input type="hidden" class="form-control" name="method" value="PATCH" />
                    <div class="container rounded bg-white mt-5 mb-5">
                        <div class="row">
                            <div class="col-md-3 border-right"></div>
                            <div class="col-md-5 border-right">
                                <div class="p-3 py-5">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h4 class="text-right">Profile Settings</h4>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-md-6"><label for="username" class="labels">Username</label><input type="text" id="username" name="username"
                                                class="form-control" placeholder="first name" value="<%= prof.username %>"></div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-md-12"><label for="phone_number" class="labels">Mobile Number</label><input id="phone_number" name="phone_number"
                                                type="text" class="form-control" placeholder="enter phone number"
                                                value="<%= prof.phone_number %>"></div>
                                        <div class="col-md-12"><label for="job_title" class="labels">Job Title</label><input type="text" id="job_title" name="job_title"
                                                class="form-control" placeholder="enter address line 1" value="<%= prof.job_title %>"></div>
                                        <div class="col-md-12"><label for="birth_date" class="labels">Birth Date</label><input id="birth_date" name="birth_date"
                                                type="date" class="form-control" placeholder="enter address line 2"
                                                value="<%= prof.birth_date ? prof.birth_date.toISOString().split('T')[0] :'' %>"></div>
                                    </div>
                                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button"
                                            type="submit">Save Profile</button></div>
                                </div>
                            </div>
                        </div>
                    </div>                    
