<%- include('header', { id_prof : id}); %>
<title>Apply leaves</title>
</head>
<body>
    <form action="/apply_leave/<%= id%>" method="POST">
    <div class="container">
        <main>
          <div class="py-5 text-center">
            <h2>Leave form</h2>
          </div>
            <div class="col-md-7 col-lg-8">
              <h4 class="mb-3">Leave information</h4>
              <form class="needs-validation" novalidate="">
            
                  <div class="col-md-5">
                    <label for="country" class="form-label">Leave Type</label>
                    <select class="form-select" name="id_type" id="type_name" required="">
                      <option value="">Select Leave Type...</option>
                      <% leaveTypes.forEach((type) => { %>
                      <option value="<%= type.id_type %>"><%= type.type_name %></option>
                      <% }); %>
                    </select>
                    <div class="invalid-feedback">
                      Please select a valid type.
                    </div>
                  </div>
      
                  <div class="col-md-3">
                    <label for="start_date" class="form-label">Start Date:</label>
                    <input type="date" class="form-control" id="start_date" name="start_date" placeholder="" required="">
                    <div class="invalid-feedback">
                      Start Date required.
                    </div>
                  </div>

                  <div class="col-md-3">
                    <label for="end_date" class="form-label">End Date:</label>
                    <input type="date" class="form-control" id="end_date" name="end_date" placeholder="" required="">
                    <div class="invalid-feedback">
                      End Date required.
                    </div>
                  </div>

                  <div class="col-12">
                    <label for="reason" class="form-label">Reason</label>
                    <input type="text" class="form-control" id="reason" name="reason" placeholder="Give your reason" required="">
                    <div class="invalid-feedback">
                      Please enter your reason
                    </div>
                  </div>
                </div>
      
                <hr class="my-4">
      
                <button class="w-100 btn btn-primary btn-lg" type="submit">Continue to apply</button>
              </form>
            </div>
          </div>
        </main>
      
<%- include('footer') %>
    <h1>Apply Leave</h1>    
    <form action="/apply_leave/<%= id%>" method="POST">
    <a href="/dashboard">Back to Dashboard</a>

</body>

</html>